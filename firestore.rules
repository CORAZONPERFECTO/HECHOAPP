rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function hasRole(role) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    function isAdmin() {
      return request.auth.token.email == 'lcaa27@gmail.com' || hasRole('ADMIN');
    }

    function isStaff() {
      return isAdmin() || hasRole('COORDINADOR') || hasRole('SUPERVISOR') || hasRole('GERENTE');
    }

    // Users
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (request.auth.uid == userId || isStaff());
      allow delete: if isAdmin();
    }

    // Tickets
    match /tickets/{ticketId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Counters (for Ticket Numbering)
    match /counters/{counterId} {
      allow read, update: if isAuthenticated();
      allow create: if isAuthenticated();
    }

    // Ticket Events
    match /ticketEvents/{eventId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if false;
      allow delete: if isAdmin();
    }

    // Resources
    match /personnel/{personId} {
      allow read, write: if isAuthenticated() && (isAdmin() || hasRole('SUPERVISOR') || hasRole('GERENTE'));
    }

    match /acErrors/{errorId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (isAdmin() || hasRole('SUPERVISOR') || hasRole('GERENTE'));
    }

    // Master Data & Income
    match /clients/{clientId} { allow read: if isAuthenticated(); allow write: if isStaff(); }
    match /locations/{locationId} { allow read: if isAuthenticated(); allow write: if isStaff(); }
    match /equipment/{equipmentId} { allow read: if isAuthenticated(); allow write: if isStaff(); }
    match /invoices/{id} { allow read, write: if isAuthenticated(); }
    match /quotes/{id} { allow read, write: if isAuthenticated(); }
    match /payments/{id} { allow read, write: if isAuthenticated(); }
    match /creditNotes/{id} { allow read, write: if isAuthenticated(); }
    match /deliveryNotes/{id} { allow read, write: if isAuthenticated(); }
    match /receipts/{id} { allow read, write: if isAuthenticated(); }
    match /recurringInvoices/{id} { allow read, write: if isAuthenticated(); }

    // Settings & Reports
    match /ticketTypes/{id} { allow read: if isAuthenticated(); allow write: if isAdmin(); }
    match /roles/{id} { allow read: if isAuthenticated(); allow write: if isAdmin(); }
    match /permissions/{id} { allow read: if isAuthenticated(); allow write: if isAdmin(); }
    
    match /ticketReports/{reportId} {
      allow read, write: if hasRole('ADMIN') || hasRole('SUPERVISOR') || hasRole('GERENTE') || request.auth.token.email == 'lcaa27@gmail.com';
    }

    match /settings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if hasRole('ADMIN') || hasRole('SUPERVISOR') || hasRole('GERENTE') || request.auth.token.email == 'lcaa27@gmail.com';
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
